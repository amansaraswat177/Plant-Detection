<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.plantdetection">

    <!-- Permissions (if needed) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Petal Picks"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PlantDetection">

        <!-- Splash Screen: Launcher -->
        <activity
            android:name=".SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Welcome Page -->
        <activity android:name=".WelcomePage" android:exported="true" />

        <!-- MainActivity (Diagnosis screen) -->
        <activity android:name=".MainActivity" android:exported="true" />

        <!-- Plant Solution Activity -->
        <activity android:name=".PlantSolution" android:exported="true" />

        <!-- E-Commerce Page -->
        <activity android:name=".ecompage" android:exported="true" />

    </application>

</manifest>