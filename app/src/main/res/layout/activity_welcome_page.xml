<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E8"
    tools:context=".WelcomePage">

    <!-- Background Gradient Effect -->
    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#C8E6C9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Main ViewPager Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/viewPagerCard"
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:clipToPadding="false"
            android:padding="12dp" />

    </androidx.cardview.widget.CardView>

    <!-- Previous Button with Modern Style -->
    <androidx.cardview.widget.CardView
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/viewPagerCard"
        app:layout_constraintBottom_toBottomOf="@id/viewPagerCard"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp">

        <ImageButton
            android:id="@+id/prev_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_media_previous"
            android:contentDescription="Previous"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#4CAF50"
            android:padding="12dp" />

    </androidx.cardview.widget.CardView>

    <!-- Next Button with Modern Style -->
    <androidx.cardview.widget.CardView
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/viewPagerCard"
        app:layout_constraintBottom_toBottomOf="@id/viewPagerCard"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="12dp">

        <ImageButton
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_media_next"
            android:contentDescription="Next"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#4CAF50"
            android:padding="12dp" />

    </androidx.cardview.widget.CardView>

    <!-- Welcome Text Container -->
    <LinearLayout
        android:id="@+id/welcomeContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="24dp"
        android:padding="20dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/viewPagerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Petal Picks!"
            android:textSize="28sp"
            android:textColor="#2E7D32"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="80dp"
            android:layout_height="4dp"
            android:background="#81C784"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/thankYouText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's make your garden bloom!"
            android:textSize="18sp"
            android:textColor="#388E3C"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/instructionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your next step:"
            android:textSize="16sp"
            android:textColor="#616161"
            android:textStyle="italic" />

    </LinearLayout>

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Diagnose Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/dbtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#FF6B35"
                android:fontFamily="sans-serif-medium"
                android:text="🔍 Diagnose Plant Disease"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:letterSpacing="0.02" />

        </androidx.cardview.widget.CardView>

        <!-- About App Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <Button
                android:id="@+id/eom_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#2E7D32"
                android:fontFamily="sans-serif-medium"
                android:text="🌱 About this app"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:letterSpacing="0.02" />

        </androidx.cardview.widget.CardView>

        <!-- Footer Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your plants deserve the best care 🌿"
            android:textSize="14sp"
            android:textColor="#81C784"
            android:textStyle="italic"
            android:layout_marginTop="20dp"
            android:gravity="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>